/* Wave fill effect for list items */
.wave-list li {
  position: relative;
  overflow: hidden;
}

.wave-list li a,
.wave-list li .app-list-item-details,
.wave-list li .app-list-item-details p,
.wave-list li strong {
  position: relative;
  z-index: 2; /* Ensure content stays above the wave */
  transition: color 0.4s ease;
}

/* Teal wave background rising from bottom */
.wave-list li::before {
  content: "";
  position: absolute;
  left: -10%;
  bottom: 0;
  width: 120%;
  height: 0%;
  z-index: 1;
  /* Solid teal base color */
  background-color: #0f766e; /* teal-700 */
  /* Add a wavy top edge using an embedded SVG background */
  background-image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 120 20' preserveAspectRatio='none'><path d='M0 20 Q 10 10 20 20 T 40 20 T 60 20 T 80 20 T 100 20 T 120 20 V20 H0 Z' fill='%230f766e'/></svg>");
  background-repeat: repeat-x;
  background-position: 0% 100%; /* start left, bottom aligned */
  background-size: 200px 40px; /* wave crest tile */
  transition: height 0.7s ease;
  animation: none;
}

.wave-list li:hover::before {
  height: 120%; /* Fill past the top for a complete cover */
  animation: wave-slosh 4s ease-in-out infinite;
}

.wave-list li:hover a,
.wave-list li:hover .app-list-item-details,
.wave-list li:hover .app-list-item-details p,
.wave-list li:hover strong {
  color: #ffffff;
}

/* Gentle horizontal sloshing of the wave crest */
@keyframes wave-slosh {
  0%   { background-position:   0% 100%; }
  50%  { background-position: 100% 100%; }
  100% { background-position:   0% 100%; }
}

/* Respect user motion preferences */
@media (prefers-reduced-motion: reduce) {
  .wave-list li::before,
  .wave-list li:hover::before {
    animation: none !important;
  }
}

